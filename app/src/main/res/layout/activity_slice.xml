<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_add_slice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter une photo" />

    <Button
        android:id="@+id/btn_edit_slice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier les photos" />

    <!-- Ajouter un bouton pour supprimer les photos -->
    <Button
        android:id="@+id/btn_delete_slice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer une photo" />

    <!-- RecyclerView pour afficher les photos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_slices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- ImageView pour afficher la photo sélectionnée -->
    <ImageView
        android:id="@+id/selectedImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/ic_menu_camera" />

</LinearLayout>
